<div class="bg-slate-800 h-screen w-5/6 right-0 m-8 scroll-smooth">
  <% @posts.each do |post| %>
    <div class="flex flex-row bg-slate-500 h-auto w-auto text-black p-2 m-2 items-center justify-between">
      <div class="flex flex-col w-5/12 h-auto">
        <p>De: <%= post.user.email %></p>

        <p class="text-2xl"><%= post.content %></p>

        <p><%= link_to "Book Link", post.link, target: "_blank" %></p>
      </div>

      <div class="flex items-center justify-center w-4/12">
        <p><%= image_tag post.image, width: 300, height: 400 if post.image %></p>
      </div>

      <div class="flex flex-col items-center justify-center w-3/12">
        <p>Comentarios</p>

        <div class="flex flex-col">
          <% post.comments.each do |comment| %>
            <p>Comentario: <%= comment.content %></p>
          <% end %>
        </div>
        <div class="flex flex-col mt-4">
          <%= form_with model: Comment.new, url: post_comments_path(post), local: true do |f| %>
            <%= f.text_field :content, class: "w-24 h-8" %>
            <%= f.submit %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

